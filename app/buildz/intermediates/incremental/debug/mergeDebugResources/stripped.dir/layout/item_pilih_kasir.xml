<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/size4"
    android:layout_marginEnd="@dimen/size4"
    android:layout_marginTop="@dimen/size2"
    android:layout_marginBottom="@dimen/size14"
    android:id="@+id/clContent"
    android:background="@drawable/bg_rect_stroke_light_gray"
    android:layout_width="match_parent"
    android:padding="@dimen/size16"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/bg_rect_light_gray"
        android:id="@+id/linearLayout"
        android:padding="@dimen/size10"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cashier"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvNamaKasir"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/size16"
        android:text="@string/database"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvStatus"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="@dimen/size16"
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/font12"
        android:background="@drawable/bg_rounded_green"
        android:text="@string/tersedia"
        app:layout_constraintStart_toEndOf="@+id/tvNamaKasir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
