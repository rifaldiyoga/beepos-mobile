<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="3"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false" >
        <size
            android:height="100dip"
            android:width="25dip" />

        <gradient
            android:centerY="0.50"
            android:endColor="@color/red"
            android:type="sweep"
            android:useLevel="false" />

        <!--        <gradient
                    android:centerColor="@color/md_dark_dividers"
                    android:centerY="0.50"
                    android:endColor="@color/materialize_primary"
                    android:startColor="@color/materialize_primary"
                    android:type="sweep"
                    android:useLevel="false" />
        -->
    </shape>

</rotate>