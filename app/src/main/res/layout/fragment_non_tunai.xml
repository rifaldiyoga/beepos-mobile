<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginEnd="@dimen/size8"
        android:layout_marginTop="@dimen/size8"
        android:id="@+id/rlKartuKredit"
        android:background="@drawable/bg_rect_stroke_light_gray"
        android:layout_width="match_parent"
        android:padding="@dimen/size16"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bg_rect_light_gray"
            android:id="@+id/llKartuKredit"
            android:padding="@dimen/size8"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person"
                app:tint="@color/gray" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/size0"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/size16"
            android:text="@string/kartu_kredit"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llKartuKredit"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginEnd="@dimen/size8"
        android:layout_marginTop="@dimen/size8"
        android:id="@+id/rlContent"
        android:background="@drawable/bg_rect_stroke_light_gray"
        android:layout_width="match_parent"
        android:padding="@dimen/size16"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bg_rect_light_gray"
            android:id="@+id/linearLayout"
            android:padding="@dimen/size8"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person"
                app:tint="@color/gray" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/size0"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/size16"
            android:text="@string/kartu_debit"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginEnd="@dimen/size8"
        android:layout_marginTop="@dimen/size8"
        android:background="@drawable/bg_rect_stroke_light_gray"
        android:layout_width="match_parent"
        android:padding="@dimen/size16"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bg_rect_light_gray"
            android:id="@+id/llGopay"
            android:padding="@dimen/size8"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person"
                app:tint="@color/gray" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/size0"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/size16"
            android:text="@string/gopay"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llGopay"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
