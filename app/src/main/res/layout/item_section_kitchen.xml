<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cL_llNamaDapur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingTop="@dimen/size10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitleDapur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_dapur"
                style="@style/TextHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_kitchen_dapur"
                android:layout_marginTop="@dimen/size6"
                android:layout_width="@dimen/size0"
                android:layout_height="wrap_content"
                android:hint="@string/cth_beestore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvTitleDapur"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleDapur" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cL_llKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/size10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tV_kitchen_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kategori"
                style="@style/TextHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_kitchen"
                android:layout_width="@dimen/size0"
                android:editable="false"
                android:inputType="none"
                android:layout_height="wrap_content"
                android:hint="@string/pilih_dapur"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tV_kitchen_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>