<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cL_llNamaDapur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitleDapur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_dapur"
                style="@style/TextHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_kitchen_dapur"
                android:layout_marginTop="@dimen/size6"
                android:layout_width="@dimen/size0"
                android:layout_height="wrap_content"
                android:hint="@string/cth_beestore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvTitleDapur"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleDapur" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cL_llKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tV_kitchen_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kategori"
                style="@style/TextHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/spinner_Kategori"
                android:padding="@dimen/size10"
                style="@style/SpinnerTheme"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tV_kitchen_content"/>

            <View
                android:layout_marginTop="@dimen/size2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/spinner_Kategori"/>

<!--            <EditText-->
<!--                android:id="@+id/et_kategori_dapur"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:drawableEnd="@drawable/ic_chevron_down"-->
<!--                android:drawablePadding="5dp"-->
<!--                android:hint="@string/cth_beestore"-->
<!--                android:inputType="textPersonName"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tV_kitchen_content"-->
<!--                tools:ignore="MissingConstraints" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>