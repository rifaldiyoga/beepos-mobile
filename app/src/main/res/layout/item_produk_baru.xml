        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:gravity="center"
                android:layout_width="@dimen/size50"
                android:layout_height="@dimen/size50"
                android:background="@drawable/bg_rect_light_teal"
                android:padding="@dimen/size10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_outline_fastfood" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_list_rvContent_LlDec"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/size5"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size10"
                android:weightSum="2">

                <TextView
                    android:id="@+id/item_list_rvContent_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="@string/nama"
                    style="@style/TextHeader"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/item_list_rvContent_tvPid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/pid"
                     />

                <TextView
                    android:id="@+id/item_list_rvContent_tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/harga"
                     />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_list_rvContent_LlDec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="@dimen/size28"
                android:layout_height="@dimen/size28"
                android:layout_gravity="center"
                android:background="@drawable/ic_pencils"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size30"
                tools:layout_editor_absoluteX="320dp"
                tools:layout_editor_absoluteY="12dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

