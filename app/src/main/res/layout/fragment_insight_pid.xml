<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_lite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@color/orange">

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/rL_top"
        android:background="@color/orange"
        android:layout_height="wrap_content"
        android:padding="@dimen/size24"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apa sih PID itu? dan gunanya untuk
apa?"
            style="@style/TextHeader"
            android:textSize="@dimen/default_text_header_size"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rL_define"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/rL_top"
        android:paddingLeft="@dimen/size16"
        android:paddingRight="@dimen/size16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/size20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:padding="@dimen/size10">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/definisi"
                    style="@style/TextHeader"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/txtDefine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product ID atau PID adalah fitur yang bisa anda
manfaatkan untuk kebutuhan khusus seperti
varian, ukuran, bahkan warna produk"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rL_fungsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/rL_define"
        android:paddingLeft="@dimen/size16"
        android:paddingRight="@dimen/size16"
        android:layout_marginTop="@dimen/size16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/size20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:padding="@dimen/size10">

                <TextView
                    android:id="@+id/txtTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fungsi"
                    style="@style/TextHeader"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/txtFungsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product ID atau PID adalah fitur yang bisa anda
manfaatkan untuk kebutuhan khusus seperti
varian, ukuran, bahkan warna produk"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rL_cocok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/rL_fungsi"
        android:paddingLeft="@dimen/size16"
        android:paddingRight="@dimen/size16"
        android:layout_marginTop="@dimen/size16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/size20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:padding="@dimen/size10">

                <TextView
                    android:id="@+id/txtTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cocok_untuk"
                    style="@style/TextHeader"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/txtCocok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PID cocok digunakan untuk bisnis toko sepatu, toko
pakaian, dll. Khusus untuk bisnis jual HP, dan toko
elektronik kami menyesiakan PID Unik yang dapat
digunakan untuk SN/IMEI"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rL_anda_tertarik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/rL_cocok"
        android:paddingLeft="@dimen/size16"
        android:paddingRight="@dimen/size16"
        android:layout_marginTop="@dimen/size16">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/size20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3"
                android:padding="@dimen/size10">

                <TextView
                    android:id="@+id/txtTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apakah_anda"
                    style="@style/TextHeader"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/txtTertarik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baca artikel PID selengkapnya disini"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:singleLine="false"/>

                <CheckBox
                    android:id="@+id/bp_cbPajak"
                    android:padding="0dp"
                    android:text="@string/saya_tertarik_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rL_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/rL_anda_tertarik"
        android:paddingLeft="@dimen/size16"
        android:paddingRight="@dimen/size16"
        android:layout_marginTop="@dimen/size16">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/size16"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/btn_rect_secondary"
                android:textColor="@color/red"
                android:id="@+id/fragment_invoice_btnBatal"
                android:gravity="center"
                android:text="@string/nanti_saja"
                android:textSize="12sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/fragment_invoice_btnDraft"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/size16"
                android:layout_weight="1"
                android:text="@string/aktif_pid"
                android:background="@drawable/btn_rect_disable" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>