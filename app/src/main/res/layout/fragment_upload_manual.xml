<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sync"
        android:layout_width="@dimen/size0"
        android:layout_height="@dimen/size0"
        android:layout_marginBottom="@dimen/size16"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_manual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lL_done_sync"
        android:paddingTop="@dimen/size8"
        android:visibility="visible"
        android:paddingBottom="@dimen/size8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/size35"
        android:paddingLeft="@dimen/size35"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="@dimen/size225"
            android:layout_height="@dimen/size180"
            android:layout_marginStart="@dimen/size32"
            android:layout_marginEnd="@dimen/size32"
            android:src="@drawable/image_upload_manual"
            app:layout_constraintBottom_toTopOf="@+id/textView90"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView90"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size16"
            android:layout_height="wrap_content"
            android:text="@string/seluruh_data_transaksi_sudah_tersinkron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView16"
            app:layout_constraintStart_toStartOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_upload_manual"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rect_primary"
        android:text="@string/upload_manual"
        android:layout_margin="@dimen/size16"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>