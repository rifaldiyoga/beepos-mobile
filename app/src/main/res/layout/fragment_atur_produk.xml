<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/size24">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:text="@string/tambah_produk"
        style="@style/TextHeader"
        android:textSize="@dimen/default_text_header_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="@dimen/size6"
        android:text="@string/yuk_siapkan_produk"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/prd_baru_vec"
        android:layout_width="@dimen/size300"
        android:layout_height="@dimen/size280"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/image_download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="@dimen/size0"
        android:layout_marginTop="@dimen/size20"
        android:layout_height="wrap_content"
        android:text="@string/empat_langkah"
        style="@style/TextHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prd_baru_vec" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/size16"
        android:padding="@dimen/size0"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_ket_prd_1_baru_foreground" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/tentukan_nama_harga"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/size20"
        android:padding="@dimen/size0"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_ket_prd_2_baru_foreground" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/pilih_satuan"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/size20"
        android:padding="@dimen/size0"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_ket_prd_3_baru_foreground" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/upload_foto"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/size20"
        android:padding="@dimen/size0"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_ket_prd_3_baru_foreground" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Simpan dan mulai pengalaman baru bersama
Beepos"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btntambah_prd"
        android:background="@drawable/btn_rect_primary"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:text="@string/mulai_tambah_prd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>