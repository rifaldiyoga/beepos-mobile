<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/size18">

    <TextView
        android:layout_marginEnd="@dimen/size16"
        android:layout_marginStart="@dimen/size16"
        android:id="@+id/tvTitle"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tentang_cloud"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:padding="@dimen/size8"
        android:id="@+id/imageView2"
        android:layout_width="@dimen/size36"
        android:layout_height="@dimen/size36"
        android:src="@drawable/ic_close_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:text="@string/desc_cloud_data_dapur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:text="@string/untuk_penjelasan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

    <Button
        android:layout_marginTop="@dimen/size28"
        android:layout_marginEnd="@dimen/size8"
        android:id="@+id/btnTutup"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:text="@string/tutup"
        android:textColor="?colorPrimary"
        app:backgroundTint="@null"
        android:background="@drawable/btn_rect_secondary"
        app:layout_constraintEnd_toStartOf="@+id/btnTontonVideo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage2" />

    <Button
        android:id="@+id/btnTontonVideo"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:text="@string/tonton_video"
        android:background="@drawable/btn_rect_primary"
        android:layout_marginStart="@dimen/size8"
        app:layout_constraintBottom_toBottomOf="@+id/btnTutup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnTutup"
        app:layout_constraintTop_toTopOf="@+id/btnTutup" />

</androidx.constraintlayout.widget.ConstraintLayout>