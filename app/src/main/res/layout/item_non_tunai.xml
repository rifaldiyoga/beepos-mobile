<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/size8"
    android:layout_marginEnd="@dimen/size8"
    android:layout_marginTop="@dimen/size8"
    android:id="@+id/clContent"
    android:background="@drawable/bg_rect_stroke_light_gray"
    android:layout_width="match_parent"
    android:padding="@dimen/size16"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/bg_rect_light_gray"
        android:id="@+id/llImage"
        android:padding="@dimen/size8"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person"
            app:tint="@color/gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/size0"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/size16"
        android:text="@string/kartu_kredit"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llImage"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>